{
  "name": "parcel-test",
  "version": "1.0.0",
  "description": "",
  "targets": {
    "frontend": {
      "context": "browser",
      "source": "src/index.html",
      "distDir": "dist",
      "sourceMap": true,
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "serve": "parcel serve",
    "build": "(rmdir /s /q dist) & parcel build --no-source-maps"
