      "tabWidth": 4,
      "semi": true,
      "singleQuote": true
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "parcel": "^2.7.0",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "typescript": "^4.8.4"
  },
  "license": "MIT"
}
